---
import { Schema } from 'astro-seo-schema'
import Feature from '../components/Feature.astro'
import Hero from '../components/Hero.astro'
import Layout from '../layouts/Layout.astro'
import { generateTitle } from '../utils'

export const prerender = true
---

<Layout isFullWidth title={generateTitle()}>
  <meta
    name="description"
    content="Pop'z BBQ specializes in 'Bad to the Bone' South Georgia-style BBQ, offering unbeatable flavor, quality, and customer service that keeps guests coming back."
    slot="description"
  />
  <Schema
    item={{
      '@context': 'https://schema.org',
      '@type': 'Restaurant',
      name: `Pop'z BBQ & Catering`,
      description:
        "Pop'z BBQ specializes in 'Bad to the Bone' South Georgia-style BBQ, offering unbeatable flavor, quality, and customer service that keeps guests coming back.",
      url: 'https://popzbbq.com',
      telephone: '+1-239-823-0485',
      email: 'popzbbq@embarqmail.com',
      address: {
        '@type': 'PostalAddress',
        streetAddress: '11770 Metro Parkway',
        addressLocality: 'Fort Myers',
        addressRegion: 'Florida',
        postalCode: '33966',
        addressCountry: 'USA'
      },
      logo: 'https://popzbbq.com/images/logo-wood.jpg',
      priceRange: '$$',
      servesCuisine: 'South Georgia BBQ',
      hasMenu: 'https://popzbbq.com/menu',
      openingHours: 'Mo-Su 00:00-24:00',
      sameAs: [
        'https://www.facebook.com/pg/PopzBBQ',
        'https://www.weddingwire.com/reviews/popz-bbq-catering-fort-myers/79b9a0461789af59.html',
        'https://www.yelp.com/biz/popz-bbq-and-catering-fort-myers'
      ],
      additionalProperty: [
        {
          '@type': 'PropertyValue',
          name: 'Customer Service',
          value:
            'Strives to create lifelong relationships with customers by going above and beyond.'
        },
        {
          '@type': 'PropertyValue',
          name: 'Quality',
          value:
            'Developed a reputation for some of the best South Georgia-style BBQ.'
        },
        {
          '@type': 'PropertyValue',
          name: 'Flavor',
          value:
            'Meats are cooked low and slow for up to 10-12 hours using oak, hickory, and pecan.'
        },
        {
          '@type': 'PropertyValue',
          name: 'Service',
          value:
            'Whether for 30 or 1,500 people, provides the highest service possible.'
        },
        {
          '@type': 'PropertyValue',
          name: 'Cooking Method',
          value: 'Meats are cooked to order on custom wood-burning cookers.'
        }
      ]
    }}
    slot="schema"
  />
  <Hero />
  <Feature />
</Layout>
