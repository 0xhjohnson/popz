import Layout from '../layouts/Layout.astro'

const items = [
  {
    _type: 'menu-category',
    name: 'Starters',
    categories: [
      {
        _type: 'menu-subcategory',
        name: 'Delicious Starters',
        items: [
          {
            _type: 'menu-item',
            name: 'Smoked Mini-Sweet Peppers',
            description: 'Stuffed with cream cheese and wrapped in bacon'
          },
          {
            _type: 'menu-item',
            name: 'BBQ Shrimp',
            description: `Pop'z BBQ shrimp`
          }
        ]
      }
    ]
  },
  {
    _type: 'menu-category',
    name: 'Meats & Seafood',
    categories: [
      {
        _type: 'menu-subcategory',
        name: 'Pork',
        items: [
          {
            _type: 'menu-item',
            name: 'Slow Cooked Pulled Pork',
            description: 'Tender pulled pork cooked 10 to 12 hours'
          },
          {
            _type: 'menu-item',
            name: 'Whole Hog',
